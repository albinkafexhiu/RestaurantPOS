@using RestaurantPOS.Web.Infrastructure


@{
    var title = ViewData["Title"] as string ?? "POS";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - POS</title>

    <link rel="stylesheet" href="~/lib/tabler/core/tabler.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/tabler/icons/tabler-icons.min.css" asp-append-version="true">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="layout-fluid">

<div class="page">
    <aside class="navbar navbar-vertical navbar-expand-lg" data-bs-theme="dark">
        <div class="container-fluid">
            <h1 class="navbar-brand navbar-brand-autodark">
                <span class="text-white">POS</span>
            </h1>

            <div class="collapse navbar-collapse show">
                @await Html.PartialAsync("_PosSidebar")
            </div>
        </div>
    </aside>

    <div class="page-wrapper">
        <header class="navbar navbar-expand-md d-print-none">
            <div class="container-xl">
                <div class="navbar-nav">
                    <div class="nav-item">
                        <span class="nav-link text-muted">@title</span>
                    </div>
                </div>
                <div class="navbar-nav flex-row order-md-last">
                    <div class="nav-item">
                        <span class="nav-link">
                            @(Context.Session.GetString(SessionKeys.WaiterName) ?? "Waiter")
                        </span>
                    </div>

                </div>
            </div>
        </header>

        <div class="page-body">
            <div class="container-xl">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success" role="alert">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
                }

                @RenderBody()
            </div>
        </div>
    </div>
</div>

<script src="~/lib/tabler/core/tabler.min.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)

</body>
</html>

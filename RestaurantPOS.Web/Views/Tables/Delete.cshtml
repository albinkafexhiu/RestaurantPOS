@model RestaurantPOS.Domain.Entities.RestaurantTable

@{
    ViewData["Title"] = "Delete Table";
}

<h2>Delete Table</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Table @Model.TableNumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.TableNumber</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
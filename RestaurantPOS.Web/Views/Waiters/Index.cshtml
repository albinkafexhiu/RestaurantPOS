@model IEnumerable<RestaurantPOS.Domain.Entities.Waiter>

@{
    ViewData["Title"] = "Waiters";
}

<h2>Waiters</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Waiter</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>PIN</th>
        <th>Active</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.PinCode</td>
            <td>@item.IsActive</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
@model RestaurantPOS.Domain.Entities.Waiter

@{
    ViewData["Title"] = "Delete Waiter";
}

<h2>Delete Waiter</h2>

<h3>Are you sure you want to delete this waiter?</h3>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">PIN</dt>
        <dd class="col-sm-10">@Model.PinCode</dd>

        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>